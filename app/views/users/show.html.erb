<div class="main">
    <div class="user__wrapper">
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2", id ="table_nickname"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">Email</th>
            <td class="table__col2", id ="table_email"><%= @user.email %></td>
          </tr>
          <tr>
            <th class="table__col1">段位</th>
            <td class="table__col2", id ="table_grage"><%= @user.grade.name%></td>
          </tr>
        </tbody>
      </table>
    </div>
  <%if @user.email != "guest@example.com" %>
    <%= link_to 'プロフィールを編集する', edit_user_path(current_user), method: :get, class: "user-edit-btn" %>
    <%= link_to "プロフィールを削除する", user_path(current_user), method: :delete, class: "user-delete-btn" %></p>
  <%end%>
    <div class="my__video_info">
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの剣道" %>
      </h2>
      <div class="user__video">
        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
        <% if @skills.present? %>
            <%= render partial: "shared/skill" ,collection: @skills%>
        <%else%>
          <h2>まだありません</h2>
        <%end%>
      </div>
    </div>
</div>