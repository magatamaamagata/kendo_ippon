<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
      <table class="table">
        <tbody>
          <%= link_to '編集', edit_user_path(current_user), method: :get, class: "user-edit-btn" %>
          <tr>
            <th class="table__col1">名前：</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">段位：</th>
            <td class="table__col2"><%= @user.grade.name%></td>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの剣道" %>
      </h2>
      <div class="user__card">
        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
        <% if @skills.present?%>
          <%= render partial: "shared/user_videos" ,locals: { skill: @skill},collection: @skills %>
        <%else%>
          <h2>まだありません</h2>
        <%end%>
      </div>
    </div>
  </div>
</div>