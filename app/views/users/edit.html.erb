<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: current_user, local: true do |f|%>
        <div class='nickname_wrap'>
          <%= f.label "お名前(20文字以内)" %><br />
          <%= f.text_field :nickname, class:"nickname", id:"name", placeholder:"例) 一流剣士" %>
        </div>
        <div class="field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label "段位"%><br /> 
          <%= f.collection_select(:grade_id, Grade.all, :id, :name, {}, {class:"crade-select"}) %>
        </div>

        <div class='actions'>
          <%= f.submit "更新", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
