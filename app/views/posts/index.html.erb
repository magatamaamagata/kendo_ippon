<%= render "shared/header" %>
<h1>Hello world</h1>
<li><%= link_to "投稿", new_post_path,  class: "post" %></li>

  <div class='post-contents'>
    <h2 class='title'>投稿一覧</h2>
    <ul class='post-lists'>
      <% @posts.each do |post| %>
        <li class='list'>
          <%# <%= link_to post_path(post) do %> %>
          <div class='post-info'>
            <h3 class='post-gif'>
              <%= post.gif_url %>
            </h3>
            <div class='post-price'>
              <%= post.difficulity.name %>
            </div>
          </div>
        </li>
      <%end%>
    </ul>
  </div>

<%= render "shared/footer" %>