<%= render "shared/header" %>
<h1>唯心一刀</h1>
<li><%= link_to "クイズを投稿", new_post_path,  class: "post" %></li>

  <div class='post-contents'>
    <h2 class='title'>投稿一覧</h2>
    <ul class='post-lists'>
      <% @posts.each do |post| %>
        <li class='list'>
          <%= link_to "詳細",post_path(post.id)  %>
          <div class='post-info'>

            <div class='post-price'>
              <%= post.difficulity.name %>
            </div>
          </div>
        </li>
      <%end%>
    </ul>
  </div>

<%= render "shared/footer" %>