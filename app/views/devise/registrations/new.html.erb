<h3>剣士登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "shared/error_messages", model: @user %>

  <div class='nickname_wrap'>
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, class:"nickname", id:"name", placeholder:"例) 一流剣士" , required: true%>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , required: true%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , placeholder:"6文字以上", id:"password", required: true%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , id:"password_confirmation", required: true%>
  </div>

  <div class="field">
    <%= f.label :grade_id %><br /> 
    <%= f.collection_select(:grade_id, Grade.all, :id, :name, {}, {class:"crade-select"}) %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>